{
  "manifest_version": 3,
  "name": "Job Tracker",
  "version": "1.0.2",
  "description": "Save and track job applications locally with IndexedDB, export to Excel, search/filter, and edit.",
  "action": {
    "default_title": "Job Tracker",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/default.png",
      "32": "icons/default.png",
      "48": "icons/default.png",
      "128": "icons/default.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "icons": {
    "16": "icons/default.png",
    "32": "icons/default.png",
    "48": "icons/default.png",
    "128": "icons/default.png"
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/site-parsers.js", "content/content.js"],
      "run_at": "document_end"
    }
  ]
}

